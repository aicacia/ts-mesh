{
  "compilerOptions": {
    "importHelpers": true,
    "target": "ES2015",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "cjs",
    "declarationDir": "types",
    "strict": true,
    "downlevelIteration": true,
    "lib": [
      "DOM",
      "ESNext"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/**/*.test.*",
    "src/**/*.benchmark.*"
  ],
  "typedocOptions": {
    "entryPoints": [
      "src/index.ts"
    ],
    "out": "docs",
    "excludeExternals": true,
    "excludePrivate": true,
    "excludeInternal": true
  }
}